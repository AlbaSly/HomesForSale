extends ../layouts/app

block content
    div(class="container mx-auto p-4 bg-gray-50")
        each message of messagesList
            div(class="my-2.5 p-2 h-20 bg-gray-100 flex flex-col shadow-lg hover:scale-105 hover:shadow-2xl")
                p #{message.message}
                div(class="w-full mx-auto flex justify-between text-gray-600")
                    p(class="w-1/2") From
                        |
                        |
                        span(class="font-semibold text-gray-400") #{message.user.name} 
                            |
                            |
                            a(href=`mailto:${message.user.email}` class="text-orange-400 hover:text-orange-500") (#{message.user.email})
                    p() At
                        |
                        |
                        span(class="font-sembold text-green-500 font-semibold") #{formatDate(message.createdAt)}
                