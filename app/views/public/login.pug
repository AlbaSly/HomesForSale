extends ../layouts/auth

block content
    div
        form(action="/auth/login" method="POST") 
            input(type="hidden" name="_csrf" value=csrfToken)
            div(class="my-2.5")
                label(for="email" class="block text-sm uppercase text-gray-600 mb-2 font-bold") E-mail
                input(type="email" name="email" id="email" class="w-full px-3 py-2 bg-gray-100  placeholder-orange-300" placeholder="Your E-mail" value=`${inputs ? inputs.email : ''}`)
                span(class="text-red-500") #{(errors.inputErrors.email) ? errors.inputErrors.email.msg : ''}
            
            div(class="my-2.5")
                label(for="password" class="block text-sm uppercase text-gray-600 mb-2 font-bold") Password
                input(type="password" name="password" id="password" class="w-full px-3 py-2 bg-gray-100  placeholder-orange-300" placeholder="Your Password")
                span(class="text-red-500") #{(errors.inputErrors.password) ? errors.inputErrors.password.msg : ''}
            
            div(class="my-5")
                input(type="submit" class="w-full md:w-auto block p-4 bg-orange-500 text-white hover:cursor-pointer hover:bg-orange-600" value="Login")
            
            div(class="my-2.5 text-center text-orange-500 underline")
                a(href="/auth-view/signup" class="hover:text-orange-600 font-bold") Are you new?
                a(href="/auth-view/recover-account" class="block hover:text-orange-600 font-bold") Did you lose your account access?