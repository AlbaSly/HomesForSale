extends ../layouts/auth

block content
    div
        form(action="/auth/set-new-password" method="POST") 
            input(type="hidden" name="_csrf" value=csrfToken)
            div(class="my-2.5")
                label(for="password" class="block text-sm uppercase text-gray-600 mb-2 font-bold") Password
                input(type="password" name="password" id="password" class="w-full px-3 py-2 bg-gray-100  placeholder-orange-300" placeholder="Your Password")
                span(class="text-red-500") #{(errors.inputErrors.password) ? errors.inputErrors.password.msg : ''}

            div(class="my-2.5")
                label(for="confirmPassword" class="block text-sm uppercase text-gray-600 mb-2 font-bold") Confirm Password
                input(type="password" name="confirmPassword" id="confirmPassword" class="w-full px-3 py-2 bg-gray-100  placeholder-orange-300" placeholder="Repeat Password")    
                span(class="text-red-500") #{(errors.inputErrors.confirmPassword) ? errors.inputErrors.confirmPassword.msg : ''}

            div(class="my-5")
                input(type="submit" class="w-full md:w-auto block p-4 bg-orange-500 text-white hover:cursor-pointer hover:bg-orange-600" value="Update Password")
            
            div(class="my-2.5 text-center text-orange-500 underline")
                a(href="/auth-view/signup" class="hover:text-orange-600 font-bold") Are you new?
                a(href="/auth-view/login" class="block hover:text-orange-600 font-bold") Do you have an account?