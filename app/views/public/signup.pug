extends ../layouts/auth

block content
    div
        form(action="/auth/signup" method="POST") 
            input(type="hidden" name="_csrf" value=csrfToken)
            div(class="my-2.5")
                label(for="name" class="block text-sm uppercase text-gray-600 mb-2 font-bold") Name
                input(type="text" name="name" id="name" class="w-full px-3 py-2 bg-gray-100  placeholder-orange-300" placeholder="Your name" value=`${inputs ? inputs.name : ''}`)
                span(class="text-red-500") #{(errors.inputErrors.name) ? errors.inputErrors.name.msg : ''}

            div(class="my-2.5")
                label(for="email" class="block text-sm uppercase text-gray-600 mb-2 font-bold") E-mail
                input(type="email" name="email" id="email" class="w-full px-3 py-2 bg-gray-100  placeholder-orange-300" placeholder="Your E-mail" value=`${inputs ? inputs.email : ''}`)
                span(class="text-red-500") #{(errors.inputErrors.email) ? errors.inputErrors.email.msg : ''}
            
            div(class="my-2.5")
                label(for="password" class="block text-sm uppercase text-gray-600 mb-2 font-bold") Password
                input(type="password" name="password" id="password" class="w-full px-3 py-2 bg-gray-100  placeholder-orange-300" placeholder="Your Password" value=`${inputs ? inputs.password : ''}`)
                span(class="text-red-500") #{(errors.inputErrors.password) ? errors.inputErrors.password.msg : ''}

            div(class="my-2.5")
                label(for="confirmPassword" class="block text-sm uppercase text-gray-600 mb-2 font-bold") Confirm Password
                input(type="password" name="confirmPassword" id="confirmPassword" class="w-full px-3 py-2 bg-gray-100  placeholder-orange-300" placeholder="Repeat Password" value=`${inputs ? inputs.confirmPassword : ''}`)    
                span(class="text-red-500") #{(errors.inputErrors.confirmPassword) ? errors.inputErrors.confirmPassword.msg : ''}

            div(class="my-5")
                input(type="submit" class="w-full md:w-auto block p-4 bg-orange-500 text-white hover:cursor-pointer hover:bg-orange-600" value="Register Now")
            div(class="my-2.5 text-center text-orange-500 underline hover:text-orange-600 font-bold")
                a(href="/auth-view/login") Already have an account?